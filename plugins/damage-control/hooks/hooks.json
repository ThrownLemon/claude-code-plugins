{
  "description": "Security protection hooks that block dangerous commands and protect sensitive files",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "uv run \"${CLAUDE_PLUGIN_ROOT}/scripts/bash-tool-damage-control.py\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run \"${CLAUDE_PLUGIN_ROOT}/scripts/edit-tool-damage-control.py\"",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "uv run \"${CLAUDE_PLUGIN_ROOT}/scripts/write-tool-damage-control.py\"",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
