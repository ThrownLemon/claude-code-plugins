{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/notify-review-available.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "coderabbit:cr-reviewer",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/log-review-complete.sh"
          }
        ]
      }
    ]
  }
}
